{
  "name": "mdl-electron",
  "version": "1.0.0",
  "description": "Metrics Definition Library - Store and manage metric definitions with OPA policy support",
  "main": "dist/electron/main.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mdl": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "cp -R assets dist/assets || true",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:package": "npm run build && electron-builder --publish never",
    "electron:mac": "npm run build && electron-builder --mac",
    "electron:win": "npm run build && electron-builder --win",
    "electron:linux": "npm run build && electron-builder --linux",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "cli": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "load:samples": "node scripts/load-sample-metrics.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "metrics",
    "definitions",
    "OPA",
    "policy",
    "governance",
    "dashboard"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
  "@types/node": "^20.10.5",
    "electron": "^26.2.0",
    "electron-builder": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
  ,
  "build": {
    "appId": "com.s-analytics.mdl",
    "productName": "MDL",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": ["dmg","zip"]
    },
    "win": {
      "target": ["nsis","zip"]
    },
    "linux": {
      "target": ["AppImage","deb"]
    }
  }
}
